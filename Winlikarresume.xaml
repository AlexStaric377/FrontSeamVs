<Window x:Class="FrontSeam.Winlikarresume"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:FrontSeam" d:DataContext="{d:DesignInstance Type=local:MapOpisViewModel}"
        mc:Ignorable="d"
        Title="Winlikarresume" Height="400" Width="630" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        WindowState="Normal" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterOwner"   Background="{x:Null}"  >
    <Window.DataContext>
        <local:MapOpisViewModel/>
    </Window.DataContext>
    <StackPanel x:Name ="ButtonWin" VerticalAlignment="Center" Height="330" Width="600" >
        <StackPanel.Effect>
            <DropShadowEffect Color="#FF1D1504" BlurRadius="35" ShadowDepth="20" Opacity="0.5" ></DropShadowEffect>
        </StackPanel.Effect>
        <Border x:Name="BorderWin" BorderBrush="#FFE2E2DD" Background="#FFE2E2DD"  BorderThickness="0,0,0,0" CornerRadius="15,15,15,15" Height="330" Width="580">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="320" Width="Auto" Name="WinGrid" Background="#FFE2E2DD" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="300*" />
                     
                </Grid.RowDefinitions>
                <Label Name="Zagolovok"  Content="Професійна діяльность " Grid.Row="0" Height="26" FontSize="12" FontWeight="Black" HorizontalAlignment="Center"  />
                <Border Grid.Row="1" x:Name="GridProfilLikar" BorderBrush="#FFB6B3B3" Background="#FF858585"  BorderThickness="1" Width="560" Height="270" Padding="0,0,0,0" VerticalAlignment="Top">
                    <StackPanel  x:Name="LikarPanelMapOpis" Grid.Row="1" Width="560" Background="White" Height="270" DataContext="{Binding SelectedGridProfilLikar}">
                        <Grid Width="Auto" Height="Auto">
                            <TextBox Grid.Row="1" Text="{Binding resume, UpdateSourceTrigger=PropertyChanged}" x:Name="LikarresumeBox"  
                         Height="270" FontSize="14" Width="560" IsEnabled="False" Background="White" BorderThickness="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>
                <Image Height="20" Width="20" Grid.Row="0" HorizontalAlignment="Right"  Name="Close_Grid"  VerticalAlignment="Bottom" 
                    Source="pack://application:,,,/FrontSeam;component/Images/xrestik.png"
                     Cursor="Hand"  >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseLikarWork}" CommandParameter=""/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                

            </Grid>
        </Border>
    </StackPanel>
</Window>

